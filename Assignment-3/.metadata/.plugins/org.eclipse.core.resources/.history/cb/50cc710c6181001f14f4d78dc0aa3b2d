#include <iostream>
using namespace std;

class Time
{
	int Hour, Minute, Second;
public:
	void operator>>()
	{
		printf("Enter Hour : ");
		scanf("%d" ,&Hour);
		printf("Enter Minutes : ");
		scanf("%d" ,&Minute);
		printf("Enter Second : ");
		scanf("%d",&Second);
	}

	void operator<<()
	{
		printf("\n%d : %d : %d\n" ,Hour, Minute, Second);
	}
};
int main()
{
	Time a;
	a.operator >>();
	a<<;

	return 0;
}

