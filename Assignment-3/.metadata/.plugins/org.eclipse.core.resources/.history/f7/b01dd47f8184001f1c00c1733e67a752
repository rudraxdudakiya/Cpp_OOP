#include<iostream>
using namespace std;

class Binary
{
	float x,y;
public:

	istream& operator>>(istream &in, Binary obj)
	{
		cout<<"Enter first number:";
		in>>obj.x;
		cout<<"Enter second number:";
		in>>obj.y;
		return in;
	}
	ostream& operator<<(ostream &out, Binary obj)
	{
	    out << obj.x << endl;
	    out << obj.y << endl;
	    return out;
	}
	void operator +()
	{
		cout<<"\nAddition of two number:"<<(x+y)<<endl;
	}

	void operator -()
	{
		cout<<"\nSubtraction of two number:"<<(x-y)<<endl;
	}

	void operator *()
	{
		cout<<"\nMultiplication of two number:"<<(x*y)<<endl;
	}

	void operator /(Binary a)
	{
		if(a.y==0)
		{
			cout<<"\nDivision is Not possible";
		}
		else
		{
			cout<<"\nDivision of two number:"<<(a.x/a.y)<<endl;
		}
	}
};
int main()
{
	Binary Obj;
	cin>>Obj;
	cout<<Obj;

	+Obj;
	-Obj;
	*Obj;
	Obj/Obj;

	cout<<Obj;

	return 0;
}
