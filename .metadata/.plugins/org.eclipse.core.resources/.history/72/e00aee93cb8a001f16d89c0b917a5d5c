#include <iostream>
using namespace std;

class student
{
	string name, gender;
	int age, bd,bm,by;
public:
	student()
	{
		cout << "--- Default Constructor of Student class ---";
		name = " ";
		age = bd = bm = by = 0;
	}
	student(string name, string gender, int age, int bd, int bm, int by)
	{
		this->name = name;
		this->gender = gender;
		this->age = age;
		this->bd = bd;
		this->bm = bm;
		this->by = by;
	}
};

class markSheet
{
	int rno,m1,m2,m3,total;
	float per;
	char div;
public:
	markSheet()
	{
		cout << "--- Default Constructor of markSheet class ---";
		rno = m1 = m2 = m3 = total = per = 0;
		div = " ";
	}
	markSheet(int rno, int m1, int m2, int m3, int total, char div, string name)
	{
		this->rno = rno;
		this->m1 = m1;
		this->m2 = m2;
		this->m3 = m3;
		this->total = total;
		this->div = div;
		per = (float) m1+m2+m3/3;
	}
};

class school : public student, public markSheet
{
	int std;
	string sName;
public:
	school()
	{
		cout << "--- Default Constructor of school class ---";
		std = 0;
		sName = " ";
	}
	school(int std, string sName, string name, string gender, int age, int bd, int bm, int by, int rno, int m1, int m2, int m3, int total, char div, string name)
	: student(name, gender, age, bd, bm, by), markSheet(rno, m1,m2,m3,total)
};
int main()
{
	return 0;
}
