#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    float number;
    cout<<"Enter the number :";
    cin>>number;
    cout<<"Default format: " << number << endl;

    int point;
    cout<<"Enter the number of decimal points :";
    cin>>point;
    cout<<fixed << setprecision(point);
    cout<<"Fixed-point notation ("<<point<<" decimal places): " << number << endl;

    cout<<"Enter the number of decimal points in sceintific notation :";
    cin>>point;
    cout<<scientific << setprecision(point);
    cout<<"Scientific notation ("<<point<<" decimal places): " << number << endl;
    return 0;
}

