#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    float number;
    cout<<"Enter the number :";
    cin>>number;
    cout<<"Default format: " << number << std::endl;

    cout<<fixed << setprecision(2);
    cout<<"Fixed-point notation (2 decimal places): " << number << endl;

    cout<<scientific << setprecision(4);
    cout<<"Scientific notation (4 decimal places): " << number << endl;
     return 0;
}

